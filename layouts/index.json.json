[
{{- $pages := where .Site.RegularPages "Kind" "page" -}}
{{- $pages = where $pages "Section" "in" (slice "posts" "post" "articles") -}}
{{- range $i, $p := $pages -}}
  {{- if $i -}},{{ end }}
  {
    "title": {{ $p.Title | jsonify }},
    "permalink": {{ $p.Permalink | jsonify }},
    "summary": {{ $p.Summary | plainify | jsonify }},
    "content": {{ $p.Plain | jsonify }}
  }
{{- end -}}
]
